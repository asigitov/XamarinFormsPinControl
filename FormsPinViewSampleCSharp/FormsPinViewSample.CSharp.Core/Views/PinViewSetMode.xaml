<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pin="clr-namespace:FormsPinView.Core;assembly=FormsPinView.Core"
    x:Class="FormsPinViewSample.Core.Views.PinViewSetMode">

    <ContentPage.Content>
        <StackLayout
            Orientation="Vertical"
            VerticalOptions="CenterAndExpand"
            Padding="0">

            <Label
                Text="🔐 Enter your PIN" 
                HorizontalTextAlignment="Center"
                TextColor="Black" />
            <Label
                x:Name="SetModeText"
                Text="" 
                HorizontalTextAlignment="Center"
                TextColor="Black" />
            <pin:PinView
                HorizontalOptions="Center"
                PinLength="{Binding PinLength}"
                ClearAfterSuccess="false"
                Color="Green"
                BorderColor="Transparent"
                RippleColor="GreenYellow"
                Mode="Set"
                Pin="1111"
                SetModeConfirmationSuccessHandler="PinView_SetModeConfirmationSuccessHandler"
                SetModeConfirmationFailureHandler="PinView_SetModeConfirmationFailureHandler"
                SetModeDefineSuccessHandler="PinView_SetModeDefineSuccessHandler"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
